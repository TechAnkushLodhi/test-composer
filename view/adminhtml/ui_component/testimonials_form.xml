<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">testimonials_form.testimonial_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Testimonial Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="save" class="KiwiCommerce\Testimonials\Block\Adminhtml\Testimonial\Edit\SaveButton"/>
            <button name="save_and_continue" class="KiwiCommerce\Testimonials\Block\Adminhtml\Testimonial\Edit\SaveAndContinueButton"/>
            <button name="delete" class="KiwiCommerce\Testimonials\Block\Adminhtml\Testimonial\Edit\DeleteButton"/>
            <button name="back" class="KiwiCommerce\Testimonials\Block\Adminhtml\Testimonial\Edit\BackButton"/>
            <button name="reset" class="KiwiCommerce\Testimonials\Block\Adminhtml\Testimonial\Edit\ResetButton"/>
        </buttons>
        <namespace>testimonials_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>testimonials_form.testimonial_data_source</dep>
        </deps>
    </settings>

    <dataSource name="testimonial_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="testimonials/testimonial/save"/>
        </settings>
        <dataProvider class="KiwiCommerce\Testimonials\Model\Testimonial\DataProvider" name="testimonial_data_source">
            <settings>
                <requestFieldName>testimonial_id</requestFieldName>
                <primaryFieldName>testimonial_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    
    <fieldset name="general">
        <settings>
            <label translate="true">General</label>
            <collapsible>false</collapsible>
        </settings>

        <!-- Status -->
        <field name="status" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">testimonial_data_source</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Status</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>

    <field name="company_name">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="dataType" xsi:type="string">text</item>
                <item name="formElement" xsi:type="string">input</item>
                <item name="label" xsi:type="string" translate="true">Company Name</item>
                <item name="dataScope" xsi:type="string">company_name</item>
                <item name="validation" xsi:type="array">
                    <item name="required-entry" xsi:type="boolean">true</item>
                </item>
            </item>
        </argument>
    </field>

    <field name="name">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="dataType" xsi:type="string">text</item>
                <item name="formElement" xsi:type="string">input</item>
                <item name="label" xsi:type="string" translate="true">Name</item>
                <item name="dataScope" xsi:type="string">name</item>
                <item name="validation" xsi:type="array">
                    <item name="required-entry" xsi:type="boolean">true</item>
                </item>
            </item>
        </argument>
    </field>


    <field name="message">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="dataType" xsi:type="string">text</item>
                <item name="formElement" xsi:type="string">textarea</item>
                <item name="label" xsi:type="string" translate="true">Message</item>
                <item name="dataScope" xsi:type="string">message</item>
            </item>
        </argument>
    </field>

    <field name="post">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="dataType" xsi:type="string">text</item>
                <item name="formElement" xsi:type="string">input</item>
                <item name="label" xsi:type="string" translate="true">Post</item>
                <item name="dataScope" xsi:type="string">post</item>
                 <item name="validation" xsi:type="array">
                    <item name="required-entry" xsi:type="boolean">true</item>
                </item>
            </item>
        </argument>
        
    </field>

    <field name="profile_pic">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="dataType" xsi:type="string">string</item>
                <item name="label" xsi:type="string" translate="true">Profile Picture</item>
                <item name="visible" xsi:type="boolean">true</item>
                <item name="formElement" xsi:type="string">fileUploader</item>
                <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                <item name="previewTmpl" xsi:type="string">KiwiCommerce_Testimonials/image-preview</item>
                <item name="required" xsi:type="boolean">false</item>
                <item name="sortOrder" xsi:type="number">30</item>
                <item name="uploaderConfig" xsi:type="array">
                    <item name="url" xsi:type="url" path="testimonials/testimonial/upload"/>
                </item>
            </item>
        </argument>
    </field>

    <field name="profile_pic_preview" formElement="image" sortOrder="31">
        <settings>
            <visible>false</visible>
            <dataScope>profile_pic</dataScope>
        </settings>
    </field>


</fieldset>


  
</form>
